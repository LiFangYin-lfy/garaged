page {
  background: #FFFFFF;
}
.container {
  /* 签名 */
  width: 100%;
  height: 100%;
  background: #fff;
  position: fixed;
  left: 0;
  top: 0;
}
.container .header {
  width: 100%;
  background: linear-gradient(180deg, #2574fb, #3138e0);
}
.container .header .left_img {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
  height: 88rpx;
}
.container .header .left_img image {
  width: 32rpx;
  height: 32rpx;
}
.container .header .left_img .title_oage {
  flex: 1;
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 500;
}
.container .sign_name_wrap {
  width: 100%;
  height: 100%;
  background: #fff;
  position: fixed;
  left: 0;
  top: 0;
}
.container .sign_name_wrap .sign_btns {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
}
.container .sign_name_wrap .sign_btns .sign_clear {
  font-size: 32rpx;
  color: #ccc;
}
.container .sign_name_wrap .sign_btns .sign_btn_right {
  display: flex;
  justify-content: flex-end;
}
.container .sign_name_wrap .sign_btns .sign_btn_right .sign_btn {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}
.container .sign_name_wrap canvas {
  width: 100%;
  height: 100%;
  flex: 1;
  background: #fff;
  position: absolute;
  /* bottom: 0; */
  left: 0;
}
.container .sign_btns {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
}
.container .sign_btns .sign_clear {
  font-size: 32rpx;
  color: #ccc;
}
.container .sign_btns .sign_btn_right {
  display: flex;
  justify-content: flex-end;
}
.container .sign_btns .sign_btn_right .sign_btn {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}
.container canvas {
  width: 100%;
  height: 100%;
  flex: 1;
  background: #fff;
  position: absolute;
  /* bottom: 0; */
  left: 0;
}
