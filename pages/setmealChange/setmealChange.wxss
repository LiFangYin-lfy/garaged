page {
  background: #FFFFFF;
}
.container {
  width: 100%;
}
.container .header {
  width: 100%;
  background: linear-gradient(180deg, #2574fb, #3138e0);
}
.container .header .left_img {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
  height: 88rpx;
}
.container .header .left_img image {
  width: 32rpx;
  height: 32rpx;
}
.container .header .left_img .title_oage {
  flex: 1;
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 500;
}
.container .meal {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
}
.container .meal .meal_list {
  width: 100%;
  margin-bottom: 24rpx;
  padding: 26rpx 32rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0rpx 0rpx 24rpx 6rpx rgba(17, 41, 180, 0.07);
}
.container .meal .meal_list .set_namw {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 26rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.container .meal .meal_list .set_namw .meal_name {
  font-size: 32rpx;
  color: #323233;
  font-weight: 500;
}
.container .meal .meal_list .set_namw .meal_money {
  display: flex;
  align-items: baseline;
}
.container .meal .meal_list .set_namw .meal_money .pt {
  display: flex;
  align-items: baseline;
}
.container .meal .meal_list .set_namw .meal_money .pt .pt_icon {
  font-size: 26rpx;
  color: #FF4444;
  font-weight: 500;
}
.container .meal .meal_list .set_namw .meal_money .pt .pt_price {
  font-size: 32rpx;
  color: #FF4444;
  font-weight: 500;
}
.container .meal .meal_list .set_namw .meal_money .money {
  font-size: 24rpx;
  color: #969799;
  text-decoration: line-through;
  margin-left: 20rpx;
}
.container .meal .meal_list .warranty_coverage {
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #323233;
}
.container .meal .meal_list .engine_oil {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container .meal .meal_list .engine_oil .oil_type,
.container .meal .meal_list .engine_oil .free_num {
  font-size: 24rpx;
  color: #323233;
}
