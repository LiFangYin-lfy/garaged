  padding: 28rpx 0;
  box-sizing: border-box;
}
.container .invoiceInformation .tai_type .tai_a .a_name {
  width: 150rpx;
  font-size: 28rpx;
  color: #3D444C;
}
.container .invoiceInformation .tai_type .tai_a .change_checked {
  flex: 1;
  padding: 24rpx 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.container .invoiceInformation .tai_type .tai_a .change_checked .change_it {
  display: flex;
  align-items: center;
  margin-right: 35rpx;
}
.container .invoiceInformation .tai_type .tai_a .change_checked .change_it image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.container .invoiceInformation .tai_type .tai_a .change_checked .change_it .it_name {
  font-size: 28rpx;
  color: #3D444C;
}
.container .invoiceInformation .tai_type .tai_a .change_checked .change_it:last-child {
  margin: 0;
}
.container .invoiceInformation .tai_type .tai_a .a_changed {
