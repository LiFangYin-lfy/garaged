}
.container .invoiceInformation .ti_show .sh_show {
  width: 100%;
  padding: 24rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #3D444C;
  font-weight: 500;
  border-bottom: 1rpx solid #f5f5f5;
}
.container .invoiceInformation .ti_show .show_img {
  width: 100%;
  padding: 32rpx 0;
  box-sizing: border-box;
}
.container .invoiceInformation .ti_show .show_img image {
