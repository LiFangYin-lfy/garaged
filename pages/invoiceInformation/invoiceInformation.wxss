}
.container .invoiceInformation .tai_type .lit .zi_list .zi_name {
  width: 150rpx;
  font-size: 28rpx;
  color: #3D444C;
}
.container .invoiceInformation .tai_type .lit .zi_list .input_text {
  flex: 1;
